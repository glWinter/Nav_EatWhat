<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="food"
            type="com.winter.nav_eatwhat.data.bean.Food" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        android:background="@drawable/food_item_selector"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.android.liuzhuang.rcimageview.RoundCornerImageView
                android:id="@+id/pic"
                imgUrl="@{food.foodImgUrl}"
                android:layout_width="64dp"
                android:layout_height="64dp"
                tools:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                app:rciv_radius="10dp"
                android:layout_margin="10dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/pic"
                android:layout_marginStart="4dp"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/foodName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@{food.foodName}"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="name" />

                <ImageView
                    android:id="@+id/thump"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="5dp"
                    thumbSrc="@{food.isThumbsUp}" />

                <TextView
                    android:id="@+id/foodDesc"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_below="@id/foodName"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/light_grey"
                    android:text="@{food.foodDesc}"
                    android:layout_height="wrap_content"
                    tools:text="desc" />

                <TextView
                    android:id="@+id/foodUseTime"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_below="@id/foodDesc"
                    android:layout_width="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/light_grey"
                    android:text="@{food.foodUseTime}"
                    android:layout_height="wrap_content"
                    tools:text="desc" />
            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>